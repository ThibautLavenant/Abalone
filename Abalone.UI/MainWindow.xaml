                </Grid.RowDefinitions>
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Click="Arrow_Click"
                    x:Name="ArrowE">
                    <Viewbox>
                        <Path
                            Data="M 10 0 L 16 4 L 10 8 M 0 4 L 16 4"
                            RenderTransformOrigin="0.5, 0.5"
                            Stroke="Red">
                            <Path.RenderTransform>
                                <RotateTransform Angle="240" />
                            </Path.RenderTransform>
                        </Path>
                    </Viewbox>
                </Button>
